{
	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 7
	},
	"env": {
		"node": true
	},
	"rules": {
		"strict": "error",
		"no-use-before-define": "error",
		"curly": "error",
		"eqeqeq": "error",
		"dot-notation": "error",
		"no-var": "error",
		"no-caller": "error",
		"valid-jsdoc": "error",
		"guard-for-in": "warn",
		"no-eq-null": "error",
		"no-console": "warn",
		"no-lone-blocks": "error",
		"no-magic-numbers": [
			"warn",
			{
				"ignore": [
					0
				],
				"ignoreArrayIndexes": true
			}
		],
		"quotes": [
			"error",
			"double",
			{
				"allowTemplateLiterals": true,
				"avoidEscape": true
			}
		],
		"quote-props": ["error", "always"],
		"semi": ["error", "always"]
	}
}
